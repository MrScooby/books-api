generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shelf {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  pages     Int
  books     BooksOnShelfs[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model Book {
  id        Int             @id @default(autoincrement())
  ISBN      Int             @unique
  lcId      Int             @unique
  pages     Int
  rating    Int
  title     String          @unique
  url       String
  author    Author          @relation(fields: [authorId], references: [id])
  authorId  Int
  genre     Genre           @relation(fields: [genreId], references: [id])
  genreId   Int
  shelfs    BooksOnShelfs[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model BooksOnShelfs {
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  shelf     Shelf    @relation(fields: [shelfId], references: [id])
  shelfId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([bookId, shelfId])
}
